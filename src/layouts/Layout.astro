---
import '../styles/global.css';
import '../styles/layout.css';
import {Github, Linkedin, Mail} from "lucide-astro";

interface Props {
  title: string;
  description: string;
  icon: string;
}
const { title, description, icon } = Astro.props;
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="description" content={description}>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <title>{title}</title>
    <link rel="icon" href={icon} />
</head>
<body>
<main>
    <slot />
    <div class="contact-links">
        <a href="https://github.com/alyelalwany" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
            <Github size={24} />
        </a>
        <a href="https://linkedin.com/in/alyelalwany" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <Linkedin size={24} />
        </a>
        <a href="mailto:alyelalwany@gmail.com" aria-label="Email">
            <Mail size={24} />
        </a>
    </div>
</main>
</body>
</html>